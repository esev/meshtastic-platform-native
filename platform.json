  "homepage": "https://github.com/meshtastic/platform-native",
  "license": "Apache-2.0",
  "keywords": [
      "dev-platform",
      "native",
      "desktop"
  ],
  "engines": {
    "platformio": "^6"
  },
  "packages": {
    "framework-portduino": {
      "type": "framework",
      "version": "https://github.com/meshtastic/framework-portduino.git#b14bccbe6d0e7efc4d4f74470ad3ec45e399063a",
      "optional": true
    }
  },
  "frameworks": {
    "arduino": {
      "package": "framework-portduino",
      "script": "builder/frameworks/arduino.py"
    }
  },  
  "repository": {
    "type": "git",
    "url": "https://github.com/meshtastic/platform-native.git"
  },
  "version": "1.2.1"
}
